<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgv"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:orientation="vertical"
    tools:context=".activities.ProfileScreen">

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/back"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:id="@+id/mobileNumberEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textAlignment="center"
        android:textSize="18dp"
        android:inputType="phone"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/iv_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerInParent="true"
            android:src="@drawable/spl"
            android:id="@+id/profileImage"
            app:civ_border_color="#FF000000"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name:"
            android:textSize="14dp"
            android:inputType="phone"/>

        <EditText
            android:longClickable="false"
            android:textSize="14dp"
            android:fontFamily="@font/light"
            android:shadowRadius="5"
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="30"
            android:background="@drawable/et_bg"
            android:paddingStart="15dp"
            android:textAlignment="viewStart"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email:"
            android:textSize="14dp"
            android:inputType="phone"/>

        <EditText
            android:longClickable="false"
            android:textSize="14dp"
            android:fontFamily="@font/light"
            android:shadowRadius="5"
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="10"
            
            android:background="@drawable/et_bg"
            android:paddingStart="15dp"
            android:textAlignment="viewStart"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile:"
            android:textSize="14dp"
            android:inputType="phone"/>

        <EditText
            android:longClickable="false"
            android:textSize="14dp"
            android:fontFamily="@font/light"
            android:shadowRadius="5"
            android:id="@+id/mobileEt"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:maxLength="10"
            
            android:background="@drawable/et_bg"
            android:paddingStart="15dp"
            android:textAlignment="viewStart"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address:"
            android:textSize="14dp"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/addressEt"
            android:longClickable="false"
            android:textSize="14dp"
            android:fontFamily="@font/light"
            android:shadowRadius="5"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_bg"
            android:paddingStart="15dp"
            android:textAlignment="viewStart"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postcode:"
            android:textSize="14dp"
            android:inputType="phone"/>

            <EditText
                android:longClickable="false"
                android:textSize="14dp"
                android:fontFamily="@font/light"
                android:shadowRadius="5"
                android:id="@+id/codeEt"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="10"
                android:background="@drawable/et_bg"
                android:paddingStart="15dp"
                android:textAlignment="viewStart"
                />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:fontFamily="@font/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Your Current Location"
                android:textSize="14dp"
                android:inputType="phone"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:src="@drawable/loc" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:fontFamily="@font/medium"
        android:background="@drawable/btnbg"
        android:id="@+id/submitData"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="14dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:layout_below="@+id/mobileNumberEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</LinearLayout>
</LinearLayout>
</ScrollView>